{% extends 'base.html.twig' %}

{% block title %}Evènements | {{ parent() }}{% endblock %}
{% block body %}
    <div class="container">
        <table class="table table-striped table-dark mb-4 mt-4">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Discipline</th>
                <th scope="col">Nom</th>
                <th scope="col">Tour</th>
                <th scope="col">Catégorie</th>
                <th scope="col">Type</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% set i = 1 %}
            {% for event  in events %}
                <tr onclick="window.location='{{ path('admin_edit_event', {"id": event.id}) }}'">
                    <th scope="row">{{ i }}</th>
                    <td>{{ event.discipline.name }}</td>
                    <td>{{ event.name }}</td>
                    <td>{{ event.round.name }}</td>
                    <td>{{ event.category.name }}</td>
                    <td>{{ event.type.name }}</td>
                    <td>
                        {% if event.published %}
                    <a href=" {{ path('event_classement_general',{"idEvent": event.id})}}"><button class="btn btn-light btn-sm">Classement Final</button></a>
                    {% endif %}
                        <a href="{{ path('admin_delete_event', {"id": event.id}) }}">
                            <button class="btn btn-light btn-sm">Supprimer</button>
                        </a>
                    </td>

                </tr>

                {% set i = i+1 %}
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="text-center">
        <a class="btn btn-primary" href="{{ path('admin_home') }}">Retour</a>
    </div>

{% endblock %}