{% extends 'base.html.twig' %}

{% block title %}Création rencontres | {{ parent() }}{% endblock %}
{% block body %}
    <div class="container">
    <h1>Créer Rencontres</h1>
    <h2>{{ event.name }}</h2>
    <div class="row">
        <div class="col-6">
            {% if nbrPoules > 0%}
            <a href="{{ path('admin_creer_rencontres_poules', {"idEvent": event.id}) }}">
                <button>Créer rencontres</button>
            </a>
                {% else %}
                    <a href="{{ path('admin_creer_rencontre', {"idEvent": event.id}) }}">
                        <button>Créer rencontres</button>
                    </a>
            {% endif %}
            <a href="{{ path('admin_see_planning_meets', {"idEvent": event.id}) }}">
                <button>Voir rencontres</button>
            </a>
            <br>
            <form method="post" action="{{ path('admin_affectation_poules', {"idEvent" : event.id}) }}"
                  class="float-right">
                <label for="nbPoules">Nombre de poules : </label>
                <input type="number" name="nbPoules"><br>
                <button type="submit" class="float-right">Valider</button>
            </form>

            <br>
            <br>
            {% if nbrPoules > 0 %}
                {% for k in 1..nbrPoules|length %}
                    {% if event.type.name is same as ("Team Tournament") %}
                        {% if k == 1 %}
