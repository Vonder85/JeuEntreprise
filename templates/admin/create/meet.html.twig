                                <h2>Poule A</h2>
                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Nom</th>
                                    <th scope="col">Entreprise</th>
                                    <th scope="col">Pays</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% set j = 1 %}
                                {% for participant in participations %}
                                    {% if participant.participationPoule == 'A' %}
                                        <tr>
                                            <th scope="row">{{ j }}</th>
                                            <td>{{ participant.teamName }} </td>
                                            <td>{{ participant.companyName }} </td>
                                            <td>{{ participant.countryName }} </td>
                                        </tr>

                                        {% set j = j+1 %}
                                    {% endif %}
                                {% endfor %}
                                </tbody>
                            </table>
                        {% elseif k == 2 %}
