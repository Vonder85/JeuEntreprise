{% extends 'base.html.twig' %}

{% block title %}Athlets !{% endblock %}
{% block body %}
<table class="table mb-0 mt-4">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Lastname Firstname</th>
        <th scope="col">Date of birth</th>
        <th scope="col">Reference</th>
        <th scope="col">Company</th>
        <th scope="col">Country</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    {% set i = 1 %}
    {% for athlet  in athlets %}

        <tr>
            <th scope="row">{{ i }}</th>
            <td>{{ athlet.name }} {{ athlet.firstname }}</td>
            <td>{{ athlet.dateBirth|date("d/m/Y") }}</td>
            <td>{{ athlet.reference }}</td>
            <td>{{ athlet.company.name }}</td>
            <td>{{ athlet.company.country }}</td>

            <td>
                <button>
                    <a href="#">Edit</a>
                </button>
                <button>
                    <a href="#">Delete</a>
                </button>
            </td>
        </tr>
        {% set i = i+1 %}
    {% endfor %}
    </tbody>
</table>
<div class="text-center">
    <a class="btn btn-primary" href="{{ path('admin_home') }}">Back</a>
</div>

{% endblock %}