{% extends 'base.html.twig' %}

{% block title %}Modifier un athlète | {{ parent() }}{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h1>Modifier un athlète</h1>
                <h3>{{ athlet.name }}</h3>
                {{ form_start(athletForm) }}
                {{ form_widget(athletForm) }}
                <button type="submit" id="btnSave" class="btn btn-secondary">Valider</button>
                <button onclick="history.back()" class="btn btn-secondary">Retour</button>
                {{ form_end(athletForm) }}
            </div>
        </div>
    </div>
{% endblock %}