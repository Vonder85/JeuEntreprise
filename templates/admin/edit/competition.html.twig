{% extends 'base.html.twig' %}

{% block title %}Modifier un compétition | {{ parent() }}{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h1>Modifier une compétition</h1>
                <h3>{{ competition.name }}</h3>
                {{ form_start(competitionForm) }}
                {{ form_widget(competitionForm) }}
                <button type="submit" id="btnSave" class="btn btn-secondary">Valider</button>
                <button onclick="history.back()" class="btn btn-secondary">Retour</button>
                {{ form_end(competitionForm) }}
            </div>
        </div>
    </div>
{% endblock %}