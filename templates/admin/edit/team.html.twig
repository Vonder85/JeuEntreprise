{% extends 'base.html.twig' %}

{% block title %}Modifier une équipe | {{ parent() }}{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-6">
        <h1>Modifier</h1>
        <h3>{{ team.name }}</h3>
        {{ form_start(teamCreatedForm)}}
        {{ form_widget(teamCreatedForm)}}
        <button type="submit" id="btnSave">Sauvegarder</button>
        {{ form_end(teamCreatedForm)}}
            </div>
            <div class="col-6">
                <table class="table mb-0 mt-4">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nom & prénom</th>
                        <th scope="col">Date de naissance</th>
                        <th scope="col">Référence</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set i = 1 %}
                    {% for athlet  in athletsTeam %}

                        <tr>
                            <th scope="row">{{ i }}</th>
                            <td>{{ athlet.name }} {{ athlet.firstname }}</td>
                            <td>{{ athlet.dateBirth|date("d/m/Y") }}</td>
                            <td>{{ athlet.reference }}</td>
                            <td>
                                <button>
                                    <a href="{{ path('admin_delete_athlet_team', {'idTeam': team.id, 'idAthlet': athlet.id}) }}">Supprimer</a>
                                </button>
                            </td>
                        </tr>
                        {% set i = i+1 %}
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
{% endblock %}