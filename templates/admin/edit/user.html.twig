{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur | {{ parent() }}{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h1>Modifier un utilisateur</h1>
                <h3>{{ user.username }}</h3>
                {{ form_start(userForm) }}
                {{ form_widget(userForm) }}
                <input type="radio" name="role" value="user" checked>
                <label for="user">Référent</label><br>
                <input type="radio" name="role" value="admin">
                <label for="admin">Admin</label><br><br>
                <button type="submit" id="btnSave" class="btn btn-secondary">Valider</button>
                <button onclick="history.back()" class="btn btn-secondary">Retour</button>
                {{ form_end(userForm) }}
            </div>
        </div>
    </div>
{% endblock %}