{% extends 'base.html.twig' %}

{% block title %}Modifier une catgéorie ! {{ parent() }}{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h1>Modifier une catégorie</h1>
                <h3>{{ category.name }}</h3>
                {{ form_start(categoryForm) }}
                {{ form_widget(categoryForm) }}
                <button type="submit" id="btnSave" class="btn btn-secondary">Valider</button>
                <button onclick="history.back()" class="btn btn-secondary">Retour</button>
                {{ form_end(categoryForm) }}
            </div>
        </div>
    </div>
{% endblock %}