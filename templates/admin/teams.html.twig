{% extends 'base.html.twig' %}

{% block title %}Equipes | {{ parent() }}{% endblock %}
{% block body %}
    <div class="container">
        <table class="table table-striped table-dark mb-4 mt-4">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% set i = 1 %}
            {% for team  in teams %}

                <tr onclick="window.location='{{ path('admin_see_team', {'id': team.id}) }}'">
                    <th scope="row">{{ i }}</th>
                    <td>{{ team.name }}</td>
                    <td>
                        <a href="{{ path('admin_delete_team', {'idTeam': team.id}) }}">
                        <button class="btn btn-light">Supprimer</button>
                        </a>
                    </td>
                </tr>
                {% set i = i+1 %}
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="text-center">
        <a class="btn btn-primary" href="{{ path('admin_home') }}">Retour</a>
    </div>

{% endblock %}