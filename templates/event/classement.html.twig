{% extends 'base.html.twig' %}

{% block title %}Evènements | {{ parent() }}{% endblock %}
{% block body %}
    <div class="container">
        <table class="table table-striped table-dark mb-4 mt-4">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Victoires</th>
                <th scope="col">Défaites</th>
                <th scope="col">Nul</th>
                <th scope="col">Points</th>
            </tr>
            </thead>
            <tbody>
            {% set i = 1 %}
            {% for participation  in participations %}
                <tr>
                    <th scope="row">{{ i }}</th>
                    <td>{{ participation.participant.name }}</td>
                    <td>{{ participation.victory }}</td>
                    <td>{{ participation.defeat }}</td>
                    <td>{{ participation.nul }}</td>
                    <td>{{ participation.pointsClassement }}</td>
                </tr>

                {% set i = i+1 %}
            {% endfor %}
            </tbody>
        </table>
        <button class="btn btn-secondary" onclick="window.location='{{ path('event_voir_rencontres', {"idEvent": idEvent}) }}'">Retour</button>
    </div>


{% endblock %}