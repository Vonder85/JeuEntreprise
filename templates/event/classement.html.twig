{% extends 'base.html.twig' %}

{% block title %}Evènements | {{ parent() }}{% endblock %}
{% block body %}
    <div class="container">
        {% if event.phase > 1 %}
            {% if participations|length >= 4 and participations|length <=6 %}
                {% if event.phaseIn is same as (1) %}
                    {% if is_granted("ROLE_ADMIN") %}
                        <button class="btn btn-secondary"
                                onclick="window.location='{{ path('admin_creation_phase2', {"idEvent": event.id}) }}'">
                            Créer phase suivante
                        </button>
                    {% endif %}
                {% endif %}
            {% endif %}
                {% if participations|length == 7%}
                    {% if is_granted("ROLE_ADMIN") %}
                        <button class="btn btn-secondary"
                                onclick="window.location='{{ path('admin_creation_5eme_place_6_7', {"idEvent": event.id}) }}'">
                            Créer 5ème place
                        </button>
                        <button class="btn btn-secondary"
                                onclick="window.location='{{ path('admin_creation_3eme_place_4_6', {"idEvent": event.id}) }}'">
                            Créer 3ème place
                        </button>
                        <button class="btn btn-secondary"
                                onclick="window.location='{{ path('admin_creation_finale_4_6', {"idEvent": event.id}) }}'">
                            Créer Finale
                        </button>
                        {% endif %}
                    {% endif %}

        {% endif %}
        <table class="table table-striped table-dark mb-4 mt-4">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Victoires</th>
                <th scope="col">Défaites</th>
                <th scope="col">Nul</th>
                <th scope="col">Points</th>
            </tr>
            </thead>
            <tbody>
            {% set i = 1 %}
            {% for participation  in participations %}
                <tr>
                    <th scope="row">{{ i }}</th>
                    <td>{{ participation.participant.name }}</td>
                    <td>{{ participation.victory }}</td>
                    <td>{{ participation.defeat }}</td>
                    <td>{{ participation.nul }}</td>
                    <td>{{ participation.pointsClassement }}</td>
                </tr>

                {% set i = i+1 %}
            {% endfor %}
            </tbody>
        </table>
        {% if is_granted("ROLE_ADMIN") %}
            <button class="btn btn-secondary" onclick="window.location='{{ path('admin_edit_event', {'id': event.id}) }}'">Retour</button>
        {% else %}
        <button class="btn btn-secondary"
                onclick="window.location='{{ path('event_voir_rencontres', {"idEvent": event.id}) }}'">Retour
        </button>
        {% endif %}
    </div>


{% endblock %}