{% extends 'base.html.twig' %}

{% block title %}Evènements | {{ parent() }}{% endblock %}
{% block body %}
    <div class="container">
        <table class="table table-striped table-dark mb-4 mt-4">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Discipline</th>
                <th scope="col">Nom</th>
                <th scope="col">Tour</th>
                <th scope="col">Catégorie</th>
                <th scope="col">Type</th>
                <th scope="col">Autre</th>

            </tr>
            </thead>
            <tbody>
            {% set i = 1 %}
            {% for event  in events %}
                <tr onclick="window.location='{{ path('event_voir_rencontres', {"idEvent": event.id}) }}'">
                    <th scope="row">{{ i }}</th>
                    <td>{{ event.discipline.name }}</td>
                    <td>{{ event.name }}</td>
                    <td>{{ event.round.name }}</td>
                    <td>{{ event.category.name }}</td>
                    <td>{{ event.type.name }}</td>

                </tr>

                {% set i = i+1 %}
            {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}